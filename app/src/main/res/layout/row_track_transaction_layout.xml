<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTrakFullDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/history_content_margin_bottom"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/custom_mid_gray"
        android:textSize="@dimen/input_text_size" />

    <LinearLayout
        android:id="@+id/btnTrakTransRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_top_bottom_border"
        android:orientation="vertical"
        android:paddingBottom="@dimen/history_content_row_padding_top_bottom"
        android:paddingTop="@dimen/history_content_row_padding_top_bottom">

        <TextView
            android:id="@+id/txtTrakTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/text_margin"
            android:textColor="@color/colorMidDarkGray"
            android:textSize="@dimen/home_title_text_size" />

        <TextView
            android:id="@+id/txtTrakTransactionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtTrakServiceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/history_content_margin_bottom"
            android:layout_marginTop="@dimen/history_content_margin_bottom"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTrackTransTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_weight="0.6"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/launch_title_text_size" />

            <TextView
                android:id="@+id/txtTrakCostValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:gravity="end"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/launch_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/history_content_margin_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTrakServiceCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/home_button_text_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>